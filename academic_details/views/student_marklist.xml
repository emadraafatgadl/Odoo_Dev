<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="sale_stock_inherit_view_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                   <xpath expr="//button[@name='action_confirm']" position="after">
                       <button name='test_product' string="Test Product" class="oe_highlight"
                                type="object" />
                    </xpath>
                    <xpath expr="//field[@name='payment_term_id']" position="after">
                          <field name="sale_by" />
                          <field name="delivery_date"/>
                          <field name="discount_type" invisible="0"/>
                          <field name="discount_percent" attrs="{'invisible': [('discount_type', '=', 'fixed')]}"/>
                          <!-- <field name="test_fld"/> -->
                          <field name="fixed_amt" attrs="{'invisible': [('discount_type', '=', 'percent')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='amount_untaxed']" position="after">
						<field name="total_discount"/>
					</xpath>
                </data>
            </field>
        </record>

        <record id="stock_inherit_view_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='origin']" position="after">
                          <field name="sale_by_so"/>
                          <field name="delivery_date_so"/>
                    </xpath>
                    <xpath expr="//div[@class='oe_button_box']" position="inside">
                        <button name='action_sale' string="Sale Order" class="oe_stat_button"
                                type="object" icon="fa-archive"
                                attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    </xpath>
                    <xpath expr="//form//header//button[@name='action_cancel']" position="after">
                        <button name="action_create_invoice" style="color:white;font-weight:bold;background-color:darkgreen;" string="Create Invoice" type="object" attrs="{'invisible': [('picking_type_code','!=','outgoing')]}"/>

                    </xpath>
                </data>
            </field>
        </record>

        <record id="student_marks_form_field" model="ir.ui.view">
            <field name="name">student.marklists.form</field>
            <field name="model">student.marklists</field>
            <field name="arch" type="xml">
                <form string="Students Marklists">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="standard"/>
                                <field name="section"/>
                            </group>
                                <group>
                                    <field name="mark2"/>
                                    <field name="mark3"/>
                                    <field name="mark4"/>
                                </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_marks_tree_view" model="ir.ui.view">
			<field name="name">student_marklists.tree</field>
			<field name="model">student.marklists</field>
			<field name="arch" type="xml">
				<tree string="Markslist Tree">
					<field name="name"/>
					<field name="standard"/>
                    <field name="section"/>
				</tree>
			</field>
		</record>

        <record id="action_student_marklists" model="ir.actions.act_window">
            <field name="name">Students Marks</field>
            <field name="res_model">student.marklists</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="student_root_menu" name="Marklists" />
<!--        <menuitem id="student_sub_menu" parent="student_root_menu" />-->
        <menuitem id="student_details_name" action="action_student_marklists" parent="student_root_menu"/>

</odoo>
